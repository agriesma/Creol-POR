
## targets

default: Creol
images: 
test: Creol

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISATOOL) usedir -v true -i true -d pdf  ## -D generated


## Creol

Creol: $(LOG)/HOL-Creol.gz

$(LOG)/HOL-Creol.gz: ## Creol/ROOT.ML Creol/document/root.tex Creol/*.thy
	@$(USEDIR) HOL Creol


## clean

clean:
	@rm -f $(LOG)/HOL-Creol.gz
