  <xsd:element name="creol" type="CreolType" />

  <xsd:complexType name="CreolType">
    <xsd:sequence>
      <xsd:element name="class" type="CreolClassType">
      <xsd:element name="interface" type="CreolInterfaceType">
    </xsd:sequence>
    <xsd:attribute name="version" type="xsd:NMTOKEN" fixed="0.0" />
    <xsd:attribute name="date" type="xsd:date" />
  </xsd:complexType>

  <xsd:complexType name="CreolClassType">
    <xsd:sequence>
      <xsd:element name="" />
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" />
  </xsd:complexType>

</xsd:schema>
