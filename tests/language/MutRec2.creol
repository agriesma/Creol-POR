/*
 * An example displaying a common dead-lock situation
 */

interface Test
begin
  with Test op m
end

class Test
contracts Test
begin
  op init == var a: Test; a := new Test; a.m(;)
  op run == skip
  with Test
    op m == caller.m(;)
end
