/*
 * Diamond.creol
 *
 * This test case is used to analyze how Diamond-shaped inheritance is going
 * to be executed in Creol.
 */
class A(a: Integer)
begin
  op init == skip
  op run == skip
  with Any
    op m(out r: Integer) == r := a
end

class B(b: Integer) inherits A(b)
begin
  op init == assert a = b
  op run == skip
  with Any
    op n(out r: Integer) == r := b
end

class C(c: Integer) inherits A(c)
begin
  op init == assert a = c
  op run == skip
  with Any
    op n(out r: Integer) == r := c
end

class D inherits B(1), C(2)
begin
  var x: Integer
  var y: Integer
  op init == skip
  op run == m(; x); n(; y); assert x = 1 && y = 2
end
