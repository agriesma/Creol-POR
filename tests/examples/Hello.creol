interface Hello
begin
  with Any op hello(out result: String)
end

class Hello implements Hello
begin
  with Any op hello(out result: String) == result := "Hello, world"
end

class Main
begin
  var result: String
  var hello: Hello
  op init == hello := new Hello
  op run == hello.hello(; result)
end
